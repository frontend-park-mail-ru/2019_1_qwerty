<fest:template xmlns:fest="http://fest.mail.ru" context_name="elements">
    <div class="menu__container">
        <fest:element name="div">
            <fest:attributes>
                <fest:attribute name="class">menu-header</fest:attribute>
            </fest:attributes>
            <fest:element name="div">
                <fest:attributes>
                    <fest:attribute name="class">menu-header__item_width_m</fest:attribute>
                </fest:attributes>
            </fest:element>
        </fest:element>
       <fest:element name="section">
           <fest:attributes>
               <fest:attribute name="class">menu-main</fest:attribute>
           </fest:attributes>
           <div class="menu-main__item">
               <h1 class="menu-main__header">Galaxy Go</h1>
           </div>
           <fest:element name="div">
               <fest:attributes>
                   <fest:attribute name="class">menu-header_mobile</fest:attribute>
               </fest:attributes>
               <fest:element name="div">
                   <fest:attributes>
                       <fest:attribute name="class">menu-header__item_width_m</fest:attribute>
                   </fest:attributes>
               </fest:element>
           </fest:element>
           <fest:for iterate="elements" index="i" value="v">
               <fest:element name="div">
                   <fest:attributes>
                       <fest:attribute name="class">menu-main__item</fest:attribute>
                       <fest:attribute name="data-section"><fest:value>v</fest:value></fest:attribute>
                   </fest:attributes>
               </fest:element>
           </fest:for>
       </fest:element>
    </div>
</fest:template>