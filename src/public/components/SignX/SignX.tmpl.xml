<fest:template xmlns:fest="http://fest.mail.ru" context_name="elements">
    <fest:script>
        var pageName = elements.isSignup ? 'Sign up' : 'Sign In';
    </fest:script>
    <section class="sign-x sign-x_center sign-x_text_center">
        <h1 class="sign-x__header">
            <fest:value>pageName</fest:value>
        </h1>
        <form action="" method="post" class="sign-x-form">
            <fest:element name="div">
                <fest:attributes>
                    <fest:attribute name="class">form__error</fest:attribute>
                </fest:attributes>
            </fest:element>
            <fest:include context="elements.signXNickname" src="../Input/Input.tmpl.xml"/>
            <fest:if test="elements.isSignup">
                <div class="sign-x-form__input_margin_m">
                    <fest:include context="elements.signXEmail" src="../Input/Input.tmpl.xml"/>
                </div>
            </fest:if>
            <fest:include context="elements.signXPassword" src="../Input/Input.tmpl.xml"/>
            <div class="sign-x-form__button_margin_m">
                <fest:include context="elements.signXButton" src="../Button/Button.tmpl.xml"/>
            </div>
        </form>
    </section>
</fest:template>